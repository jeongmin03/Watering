<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlantListActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="left"
            android:text="  Plant List"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp" >

                <Button
                    android:id="@+id/PL_photo"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_designs"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="left"
                    android:text="ADD PLANT" />

                <Button
                    android:id="@+id/PL_logOut"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_designs"
                    android:textColor="#ffffff"
                    android:layout_gravity="right"
                    android:layout_marginLeft="120dp"
                    android:text="LOGOUT" />
        </LinearLayout>

        <ListView
            android:id="@+id/listView_xml"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/listview_designs"
            android:dividerHeight="3dp"
            android:divider="#B5D3EC"
            />


</LinearLayout>