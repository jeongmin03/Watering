<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlantAddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <Button
            android:id="@+id/PA_logOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/PA_Camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="식물 촬영" />

                <Button
                    android:id="@+id/PA_Album"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="앨범" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <ImageView
                    android:id="@+id/PA_IMAGE"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/PA_plantName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:hint="식물 이름" />
                    <EditText
                        android:id="@+id/PA_plantCycle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:hint="물주는 주기" />
                    <Button
                        android:id="@+id/PA_SavePlant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:text="저장" />
                </LinearLayout>

            </LinearLayout>
            <!-- -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <EditText
                    android:id="@+id/PA_textbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="식물 이름 검색" />
                <Button
                    android:id="@+id/PA_Search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사진 검색" />
            </LinearLayout>
            <WebView
                android:id="@+id/PA_WebView"
                android:layout_width="match_parent"
                android:layout_height="346dp" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>